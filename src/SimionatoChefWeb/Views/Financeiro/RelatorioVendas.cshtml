@model SimionatoChefBusiness.Models.View.FinanceiroView
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" SimionatoChefStyle="IE=edge">
    <title>SimiInfo | Financeiro</title>
    <link rel="icon" href="~/SimionatoChefStyle/img/iconSIMI.png" type="image/x-icon">
    <meta SimionatoChefStyle="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
    <link rel="stylesheet" href="~/SimionatoChefStyle/bootstrap/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.5.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/ionicons/2.0.1/css/ionicons.min.css">
    <link rel="stylesheet" href="~/SimionatoChefStyle/plugins/daterangepicker/daterangepicker.css">
    <link rel="stylesheet" href="~/SimionatoChefStyle/plugins/datepicker/datepicker3.css">
    <link rel="stylesheet" href="~/SimionatoChefStyle/plugins/iCheck/all.css">
    <link rel="stylesheet" href="~/SimionatoChefStyle/plugins/colorpicker/bootstrap-colorpicker.min.css">
    <link rel="stylesheet" href="~/SimionatoChefStyle/plugins/timepicker/bootstrap-timepicker.min.css">
    <link rel="stylesheet" href="~/SimionatoChefStyle/plugins/select2/select2.min.css">
    <link rel="stylesheet" href="~/SimionatoChefStyle/dist/css/AdminLTE.min.css">
    <link rel="stylesheet" href="~/SimionatoChefStyle/dist/css/skins/_all-skins.min.css">
    <link rel="stylesheet" href="~/SimionatoChefStyle/dist/css/modal.css">
    <script type="text/javascript" src="~/SimionatoChefStyle/plugins/datatables/datatables.min.js"></script>
    <link rel="stylesheet" href="~/SimionatoChefStyle/plugins/datatables/dataTables.bootstrap.css">
    <script type="text/javascript" src="~/SimionatoChefStyle/dist/js/valida/valida_formulario_usuario.js"></script>
    <script src="~/SimionatoChefStyle/plugins/select2/select2.full.min.js"></script>
    <script src="~/SimionatoChefStyle/plugins/input-mask/jquery.inputmask.js"></script>
    <script src="~/SimionatoChefStyle/plugins/input-mask/jquery.inputmask.date.extensions.js"></script>
    <script src="~/SimionatoChefStyle/plugins/input-mask/jquery.inputmask.extensions.js"></script>
    <script src="~/SimionatoChefStyle/plugins/daterangepicker/moment.min.js"></script>
    <script src="~/SimionatoChefStyle/plugins/daterangepicker/daterangepicker.js"></script>
    <script src="~/SimionatoChefStyle/plugins/datepicker/bootstrap-datepicker.js"></script>
    <script src="~/SimionatoChefStyle/plugins/colorpicker/bootstrap-colorpicker.min.js"></script>
    <script src="~/SimionatoChefStyle/plugins/timepicker/bootstrap-timepicker.min.js"></script>
    <script src="~/SimionatoChefStyle/plugins/slimScroll/jquery.slimscroll.min.js"></script>
    <script src="~/SimionatoChefStyle/plugins/iCheck/icheck.min.js"></script>
    <script src="~/SimionatoChefStyle/plugins/fastclick/fastclick.js"></script>
    <script src="~/SimionatoChefStyle/dist/js/app.min.js"></script>
    <script src="~/SimionatoChefStyle/dist/js/demo.js"></script>
    <script src="~/SimionatoChefStyle/dist/js/mascaraData.js"></script>
    <script src="~/SimionatoChefStyle/dist/js/exportarDados.js"></script>
    <script src="~/SimionatoChefStyle/dist/js/impressao.js"></script>
</head>
<body class="hold-transition skin-green-light sidebar-mini">
    <div class="wrapper">
        <header class="main-header">
            <a href="../../Dashboard" class="logo">
                <span class="logo-mini"><b>Simi</b>Info</span>
                <span class="logo-lg"><b>Simi</b>Info</span>
            </a>
            <nav class="navbar navbar-static-top">
                <a href="#" class="sidebar-toggle" data-toggle="offcanvas" role="button"> <span class="sr-only">Menu</span> </a>
                <div class="navbar-custom-menu">
                    <ul class="nav navbar-nav">
                        <li> <a href="../../Dashboard"> <i class="glyphicon glyphicon-log-out"></i> </a> </li>
                    </ul>
                </div>
            </nav>
        </header>
    </div>
    <aside class="main-sidebar">
        <section class="sidebar">
            <div class="main-sidebar">
                <div class="sidebar">
                    <div class="user-panel">
                        <div class="pull-left image"> <img src="~/SimionatoChefStyle/img/user_icon.png"></div>
                        <div class="pull-left info">
                            <p>@Html.DisplayFor(model => model.Usuario.Nome)</p>
                            <a><i class="text-success"></i>@Html.DisplayFor(model => model.Usuario.Cargo)</a>
                        </div>
                    </div>
                    <ul class="sidebar-menu">
                        <li> <a href="../../Dashboard"> <i class="glyphicon glyphicon-home"></i> <span>Inicio</span></a>
                        <li>
                            <a> <i class="	glyphicon glyphicon-shopping-cart"></i> <span>Vendas</span> <span class="pull-right-container"> <i class="fa fa-angle-left pull-right"></i> </span> </a>
                            <ul class="treeview-menu">
                                <li><a href="../Venda/CriarVenda"><i class="fa fa-circle-o"></i> Criar Venda</a></li>
                                <li><a href="../Venda/MinhasVendas"><i class="fa fa-circle-o"></i> Minhas Vendas</a></li>
                            </ul>
                        </li>
                        <li>
                            <a href="#"> <i class="glyphicon glyphicon-glass"></i> <span>Estoque</span> <span class="pull-right-container"> <i class="fa fa-angle-left pull-right"></i> </span> </a>
                            <ul class="treeview-menu">
                                <li><a href="../Produto"><i class="fa fa-circle-o"></i>Produtos</a></li>
                            </ul>
                        </li>
                        <li class="active treeview">
                            <a href="#">
                                <i class="glyphicon glyphicon-usd"></i> <span>Financeiro</span>
                                <span class="pull-right-container">
                                    <i class="fa fa-angle-left pull-right"></i>
                                </span>
                            </a>
                            <ul class="treeview-menu">
                                <li class="active treeview">
                                    <a href="../Financeiro">
                                        <i class="fa fa-circle-o"></i> Relatório de Vendas
                                    </a>
                                </li>
                            </ul>
                        </li>
                        <li>
                            <a href="#">
                                <i class="glyphicon glyphicon-user"></i> <span>Configurações</span>
                                <span class="pull-right-container">
                                    <i class="fa fa-angle-left pull-right"></i>
                                </span>
                            </a>
                            <ul class="treeview-menu">
                                <li>
                                    <a href="../Cliente">
                                        <i class="fa fa-circle-o"></i> Clientes
                                    </a>
                                </li>
                                <li>
                                    <a href="../Usuario">
                                        <i class="fa fa-circle-o"></i> Usuários
                                    </a>
                                </li>
                            </ul>
                        </li>
                    </ul>
                </div>
            </div>
        </section>
    </aside>
    <div class="content-wrapper">
        <section class="content-header">
            <h1>
                Financeiro
                <small>Relatório de Vendas</small>
            </h1>
            <ol class="breadcrumb">
                <li><a href="#"><i class="fa fa-dashboard"></i> Inicio</a></li>
                <li><a href="#">Financeiro</a></li>
                <li class="active">Relatório de Vendas</li>
            </ol>
        </section>
        <section class="content">
            <div class="row">
                <div class="col-md-12">
                    <div class="box">
                        <div class="box-header">
                            <h3 class="box-title">Pesquisar Periodo de Vendas</h3>
                            <div class="box-tools pull-right">
                                <button type="button" class="btn btn-box-tool" data-widget="collapse">
                                    <i class="fa fa-minus"></i>
                                </button>
                                <button type="button" class="btn btn-box-tool" data-widget="remove"><i class="fa fa-times"></i></button>
                            </div>
                        </div>
                        <div class="box-body">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <form id="pesquisaUser" name="pesquisaVendas" action="ListaVendaDia" method="post">
                                        <label>Uma data:</label>
                                        <div class="input-group date">
                                            <div class="input-group-addon">
                                                <i class="fa fa-calendar"></i>
                                            </div>
                                            <input type="text" class="form-control pull-right" name="datepicker" value="@DateTime.Now" id="datepicker">
                                            <div class="input-group-btn">
                                                <i><button type="submit" value="pesquisaVendas" class="btn btn-success"><i class="fa fa-search"></i></button></i>
                                            </div>
                                        </div>
                                    </form>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <form id="ListaPedidosEntreDias" name="ListaPedidosEntreDias" action="ListaPedidosEntreDias" method="post">
                                        <label>Periodo de Dias:</label>
                                        <div class="input-group">
                                            <div class="input-group-addon">
                                                <i class="fa fa-calendar"></i>
                                            </div>
                                            <input type="text" class="form-control pull-right" name="reservation" id="reservation">
                                            <div class="input-group-btn">
                                                <i><button type="submit" value="ListaPedidosEntreDias" class="btn btn-success"><i class="fa fa-search"></i></button></i>
                                            </div>
                                        </div>
                                    </form>
                                </div>
                                <div class="row">
                                    <div class="col-md-5"> </div>
                                    <div class="col-md-7">
                                        <div class="form-group">
                                            <a href="#" class="export"> <button type="button" class="btn btn-success"><i class="glyphicon glyphicon-folder-open"></i> Exportar</button></a>
                                            <button type="button" onclick="cont();" value="Imprimir Div separadamente" class="btn btn-google"><i class="fa fa-print"></i> Imprimir</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-12">
                    <div class="box">
                        <div class="box-header">
                            <h3 class="box-title">Pedidos do dia: @DateTime.Now</h3>
                            <div class="box-tools pull-right">
                                <button type="button" class="btn btn-box-tool" data-widget="collapse">
                                    <i class="fa fa-minus"></i>
                                </button>
                                <button type="button" class="btn btn-box-tool" data-widget="remove"><i class="fa fa-times"></i></button>
                            </div>
                        </div>
                        <div class="box-body">
                            <div class="row">
                                <div class="col-md-12">
                                    <div id="dvTabela">
                                        <table class="table table-hover">
                                            <tr>
                                                <th>#</th>
                                                <th>Data</th>
                                                <th>Cliente</th>
                                                <th>Status</th>
                                                <th>Total Pedido</th>
                                            </tr>
                                            @if (Model.ListaVendas != null)
                                            {
                                                foreach (var element in Model.ListaVendas)
                                                {
                                                    <tr>
                                                        <td><a target="_blank" href="Venda/MinhasVendas/@Html.DisplayFor(m => element.Id)">@Html.DisplayFor(m => element.Id)</a></td>
                                                        <td><a target="_blank" href="Venda/MinhasVendas/@Html.DisplayFor(m => element.Id)">@Html.DisplayFor(m => element.Datavenda)</a></td>
                                                        <td>@Html.DisplayFor(m => element.Cliente.Nome)</td>
                                                        <td>@Html.DisplayFor(m => element.StatusVenda)</td>
                                                        <td>@Html.DisplayFor(m => element.Total)</td>
                                                    </tr>
                                                }
                                            }
                                            @if (Model.ListaVendas != null)
                                            {
                                                <tr>
                                                    <th>Total:</th>
                                                    <th></th>
                                                    <th></th>
                                                    <th></th>
                                                    <th>
                                                        @Html.DisplayFor(model => model.Total)
                                                    </th>
                                                </tr>
                                            }
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>
    <footer class="main-footer">
        <div class="pull-right hidden-xs">
            <b>Version</b> 1.0.1
        </div>
        <strong>Copyright &copy; 2016-@DateTime.Now.Year <a href="#">Gustavo Simionato</a>.</strong> Todos os Direitos Reservados.
    </footer>
</body>

</html>
